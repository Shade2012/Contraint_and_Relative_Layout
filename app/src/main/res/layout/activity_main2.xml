<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6eef5"
    tools:context=".MainActivity2">
  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/imageView"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/css"
      app:civ_border_width="4dp"
      android:layout_marginLeft="170dp"
      android:layout_marginBottom="20dp"
      />
  <RelativeLayout
      android:layout_marginTop="80dp"
      android:layout_width="match_parent"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_height="wrap_content"
      android:background="@drawable/persegi">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/example_bold"
        android:paddingTop="10dp"
        android:textSize="35dp" />

    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Cuci Baju"
        android:padding="15dp"
        />
    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="140dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:text="Cuci Batik"
        android:padding="15dp"

      /><Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="210dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:text="Cuci Selimut"
      android:padding="15dp"
      /><Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="280dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:text="Cuci Seperai"
      android:padding="15dp"
      /><Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="350dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:text="Cuci Sepatu"
      android:padding="15dp"
      /><Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="420dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:text="Cuci Karpet"
      android:padding="15dp"
      /><Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="490dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:text="Cuci Jas"
      android:padding="15dp"
      />
    
  </RelativeLayout>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="650dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:text="Contrains Layout"
      android:padding="15dp"
      android:id="@+id/ganti"
      />
</RelativeLayout>